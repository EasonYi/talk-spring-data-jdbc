<configuration>
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%msg%n</pattern>
		</encoder>
	</appender>

	<logger name="org.springframework.jdbc.core.JdbcTemplate" level="DEBUG"/>

	<root level="INFO">
		<appender-ref ref="STDOUT" />
	</root>
</configuration>